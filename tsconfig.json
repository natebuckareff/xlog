{
    "compilerOptions": {
        "incremental": true,
        "target": "ES2021",
        "lib": ["ES2021"],
        "module": "ES2020",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "allowJs": false,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./build"
    },
    "include": ["src"],
    "exclude": ["node_modules", "build"]
}
